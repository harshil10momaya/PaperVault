<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0" styleClass="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.papervault.AdminUploadController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>

    <Label styleClass="label-title" text="Upload Previous Year Paper" />
    <Label fx:id="messageLabel" textFill="#1e90ff" />

    <GridPane hgap="10.0" vgap="15.0">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="150.0" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="300.0" />
        </columnConstraints>

        <Label text="1. Course (Subject):" GridPane.rowIndex="0" />
        <ComboBox fx:id="courseComboBox" prefWidth="350.0" promptText="Select Course Code/Title" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="2. Academic Year:" GridPane.rowIndex="1" />
        <TextField fx:id="yearField" promptText="e.g., 2025" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="3. Exam Type:" GridPane.rowIndex="2" />
        <ComboBox fx:id="examTypeComboBox" prefWidth="350.0" promptText="Select Exam Type" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        
        <Label text="4. PDF File:" GridPane.rowIndex="3" />
        <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
            <TextField fx:id="filePathField" editable="false" promptText="No file selected..." />
            <Button onAction="#handleSelectFile" text="Browse PDF File" />
        </VBox>
    </GridPane>

    <Button onAction="#handleUploadPaper" prefWidth="300.0" text="UPLOAD PAPER TO VAULT" style="-fx-background-color: #4CAF50; -fx-text-fill: white;">
        <VBox.margin>
            <Insets top="20.0" />
        </VBox.margin>
    </Button>
</VBox>