<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>

<VBox alignment="CENTER" prefHeight="350.0" prefWidth="500.0" spacing="20.0" styleClass="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.papervault.SemesterSelectController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>

    <Label styleClass="label-title" text="Choose Academic Semester" />
    <Label fx:id="welcomeLabel" text="Hello! Which semester's papers are you looking for?" wrapText="true" />

    <ComboBox fx:id="semesterSelector" prefWidth="250.0" promptText="Choose Semester (e.g., Semester 5)" />

    <Button onAction="#handleProceedToDashboard" prefWidth="200.0" text="Go to Papers" />
</VBox>