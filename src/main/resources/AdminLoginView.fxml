<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>

<VBox alignment="CENTER" prefHeight="350.0" prefWidth="500.0" spacing="15.0" styleClass="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.papervault.AdminLoginController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <Label styleClass="label-title" text="PaperVault Admin Portal" />
    <Label fx:id="messageLabel" textFill="#e01b1b" />

    <Label text="Username (Admin):" />
    <TextField fx:id="usernameField" promptText="Enter Admin Username" />

    <Label text="Password:" />
    <PasswordField fx:id="passwordField" promptText="Enter Admin Password" />

    <Button onAction="#handleAdminLogin" prefWidth="180.0" text="Admin Login" />
</VBox>