<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>

<VBox alignment="TOP_CENTER" prefHeight="700.0" prefWidth="1200.0" spacing="20.0" styleClass="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.papervault.DashboardController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
   <padding>
      <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
   </padding>
   
   <HBox alignment="CENTER_LEFT" spacing="20.0" VBox.vgrow="NEVER">
      <Label styleClass="label-title" text="PaperVault Student Dashboard" HBox.hgrow="ALWAYS" />
      
      <Button onAction="#handleBackToSemester" text="&lt; Select Semester" styleClass="button-clear" />
      
      <Button onAction="#handleLogout" text="Logout" styleClass="button-logout" />
   </HBox>
   
   <Label fx:id="welcomeLabel" text="Welcome! Viewing papers for..." styleClass="label-subtitle" />
   
    <HBox alignment="CENTER_LEFT" spacing="15.0" VBox.vgrow="NEVER">
        <Label text="Subject Selection:" />
        <ComboBox fx:id="courseSelector" prefWidth="500.0" promptText="Choose a Subject to View Papers" />
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="25.0" VBox.vgrow="NEVER">
        
        <HBox alignment="CENTER_LEFT" spacing="5.0">
            <Label text="Year Filter:" />
            <ComboBox fx:id="yearFilter" prefWidth="100.0" promptText="All Years" onAction="#loadPapers" />
            <Button text="Clear" onAction="#handleClearYearFilter" styleClass="button-clear" />
        </HBox>

        <HBox alignment="CENTER_LEFT" spacing="5.0">
            <Label text="Exam Type:" />
            <ComboBox fx:id="examTypeFilter" prefWidth="120.0" promptText="All Types" onAction="#loadPapers" />
            <Button text="Clear" onAction="#handleClearExamFilter" styleClass="button-clear" />
        </HBox>
        
        <HBox alignment="CENTER_LEFT" spacing="10.0" HBox.hgrow="ALWAYS">
            <Label text="Quick Search:" />
            <TextField fx:id="searchField" prefWidth="300.0" promptText="Search by Subject Name or Code" HBox.hgrow="ALWAYS" />
        </HBox>
    </HBox>
    
    <TableView fx:id="paperTable" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" styleClass="table-view">
        <columns>
            <TableColumn fx:id="courseCodeCol" prefWidth="100.0" text="Code" />
            <TableColumn fx:id="subjectCol" prefWidth="450.0" text="Subject Name" />
            <TableColumn fx:id="yearCol" prefWidth="80.0" text="Year" />
            <TableColumn fx:id="typeCol" prefWidth="100.0" text="Exam Type" />
            <TableColumn fx:id="viewCol" prefWidth="120.0" text="Access" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
    </TableView>
</VBox>