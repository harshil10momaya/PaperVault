<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>

<VBox alignment="TOP_CENTER" prefHeight="700.0" prefWidth="1200.0" spacing="15.0" styleClass="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.papervault.DashboardController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <Label styleClass="label-title" text="PaperVault Student Dashboard" />
   <Label fx:id="welcomeLabel" text="Welcome!" textFill="#4682b4">
      <VBox.margin>
         <Insets bottom="10.0" top="10.0" />
      </VBox.margin>
   </Label>
   
    <HBox alignment="CENTER_LEFT" spacing="15.0" VBox.vgrow="NEVER">
        <Label text="Filter by Course:" />
        <ComboBox fx:id="courseSelector" prefWidth="300.0" promptText="Select your Subject" />
        
        <Label text="Year:" />
        <ComboBox fx:id="yearFilter" prefWidth="100.0" promptText="Any Year" onAction="#loadPapers" />
        <Button text="Clear Year" onAction="#handleClearYearFilter" />
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="15.0" VBox.vgrow="NEVER">
        <Label text="Search (Code/Title):" />
        <TextField fx:id="searchField" prefWidth="400.0" promptText="Search by Subject Name or Code" />
        <Button mnemonicParsing="false" onAction="#loadPapers" text="Apply Search" />
    </HBox>
    
    <TableView fx:id="paperTable" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="courseCodeCol" prefWidth="100.0" text="Code" />
            <TableColumn fx:id="subjectCol" prefWidth="450.0" text="Subject Name" />
            <TableColumn fx:id="yearCol" prefWidth="80.0" text="Year" />
            <TableColumn fx:id="typeCol" prefWidth="100.0" text="Exam Type" />
            <TableColumn fx:id="viewCol" prefWidth="120.0" text="Access" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
    </TableView>
</VBox>