<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="600.0" spacing="15.0" styleClass="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.papervault.SignupController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <padding>
        <Insets bottom="30.0" left="50.0" right="50.0" top="30.0" />
    </padding>

    <Label styleClass="label-title" text="New Student Registration" />
    <Label fx:id="messageLabel" textFill="#e01b1b" />

    <GridPane hgap="10.0" vgap="10.0">
        <Label text="Full Name:" GridPane.rowIndex="0" />
        <TextField fx:id="nameField" promptText="Enter Full Name" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Roll Number/ID:" GridPane.rowIndex="1" />
        <TextField fx:id="idField" promptText="e.g., 23PT01" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        
        <Label text="Course/Program:" GridPane.rowIndex="2" />
        <ComboBox fx:id="programSelector" prefWidth="250.0" promptText="Select Program (TCS, DS, etc.)" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Password:" GridPane.rowIndex="3" />
        <PasswordField fx:id="passwordField" promptText="Create Password" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        
        <Label text="Confirm Password:" GridPane.rowIndex="4" />
        <PasswordField fx:id="confirmPasswordField" promptText="Re-enter Password" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    </GridPane>

    <Button onAction="#handleSignup" prefWidth="250.0" text="Register and Login" />
    
    <Button onAction="#handleBackToLogin" prefWidth="150.0" text="Back to Login" style="-fx-background-color: #bdc3c7;" />
</VBox>