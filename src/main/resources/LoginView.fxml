<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" styleClass="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.papervault.LoginController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <Label styleClass="label-title" text="PaperVault Student Login" />
    <Label fx:id="messageLabel" textFill="#e01b1b" />

    <Label text="Student ID:" />
    <TextField fx:id="studentIdField" promptText="Enter Student ID" />

    <Label text="Password:" />
    <PasswordField fx:id="passwordField" promptText="Enter Password" />

    <Button onAction="#handleLogin" prefWidth="250.0" text="Login" />
    
    <Button onAction="#handleSignupAccess" prefWidth="250.0" text="New Student Sign-up" style="-fx-background-color: #f39c12; -fx-text-fill: white;" />
    
    <Button onAction="#handleAdminAccess" prefWidth="250.0" text="Admin Access" styleClass="button-admin" />

</VBox>